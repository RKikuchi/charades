<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/game_round_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorNeutralBg"
    tools:context="com.pongo.charades.activities.GameRoundActivity">

    <TextView
        android:id="@+id/top_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="@string/timer"
        android:textSize="20sp"
        android:padding="20dp"
        android:textColor="@android:color/white" />

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout
        android:id="@+id/round_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/back_button"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            style="@style/Widget.AppCompat.Button.Colored">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&#xf112;"
                android:id="@+id/back_icon"
                android:padding="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/back"
                android:id="@+id/back_button_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/skip_button"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            style="@style/Widget.AppCompat.Button.Colored">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&#xf064;"
                android:id="@+id/skip_icon"
                android:padding="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/skip"
                android:id="@+id/skip_button_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/replay_button"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            style="@style/Widget.AppCompat.Button.Colored">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&#xf144;"
                android:id="@+id/replay_icon"
                android:padding="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/play_again"
                android:id="@+id/replay_button_text" />
        </LinearLayout>

    </FrameLayout>

    <TextView
        android:id="@+id/main_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_text"
        android:layout_above="@id/round_controls"
        android:keepScreenOn="true"
        android:text="@string/get_ready"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        android:textStyle="bold"
        android:gravity="center" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/score_track_recycler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_text"
        android:layout_above="@id/round_controls" />

</RelativeLayout>
